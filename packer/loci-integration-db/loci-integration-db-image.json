{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "script_aws_access": "{{env `AWS_ACCESS_KEY_ID`}}",
    "script_aws_secret_access": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "script_aws_session_token": "{{env `AWS_SESSION_TOKEN`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-southeast-2",
    "source_ami": "ami-03ed5bd63ba378bd8",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "tags": { "purpose": "loci-integration-db-image {{timestamp}}" } ,
    "force_deregister" : true,
    "force_delete_snapshot" : true,
    "run_volume_tags": { "purpose": "run loci-integration-db-image {{timestamp}}" } ,
    "ami_name": "loci-integration-db-image {{timestamp}}"
  }],
  "provisioners": [
      {
        "type": "file",
        "source": "instance.sh",
        "destination": "/tmp/instance.sh"
      },
      {
        "type": "shell",
        "script": "./prov.sh", 
        "environment_vars" : ["LOCI_S3_ACCESS_KEY_ID={{user `script_aws_access`}}", "LOCI_S3_SECRET_ACCESS_KEY={{user `script_aws_secret_access`}}", "AWS_SESSION_TOKEN={{user `script_aws_session_token`}}"], 
        "execute_command": "echo 'packer' | sudo -S env {{ .Vars }} {{ .Path }}" 
      }
  ]
}